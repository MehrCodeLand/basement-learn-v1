@model List<Category>

<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category Lists
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <thead>
            @foreach( var obj in Model.OrderBy(u=> u.Name) )
            {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
            }
        </thead>
    </table>
</div>  